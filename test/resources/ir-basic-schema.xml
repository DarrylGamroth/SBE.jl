<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   package="ir.basic"
                   id="1"
                   version="1"
                   byteOrder="littleEndian"
                   description="Basic schema for IR round-trip tests.">
    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root.">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>
        <composite name="varDataEncoding" description="Variable length binary data.">
            <type name="length" primitiveType="uint16" maxValue="4096"/>
            <type name="varData" primitiveType="uint8" length="0"/>
        </composite>
        <type name="OrderId" primitiveType="uint64"/>
        <type name="Quantity" primitiveType="uint32"/>
        <enum name="Side" encodingType="uint8" description="Order side">
            <validValue name="BUY">1</validValue>
            <validValue name="SELL">2</validValue>
        </enum>
        <set name="Flags" encodingType="uint8">
            <choice name="urgent">0</choice>
            <choice name="iceberg">1</choice>
        </set>
        <composite name="Price">
            <type name="mantissa" primitiveType="int64"/>
            <type name="exponent" primitiveType="int8"/>
        </composite>
    </types>

    <sbe:message name="Order" id="1" description="Basic order message.">
        <field name="orderId" id="1" type="OrderId"/>
        <field name="quantity" id="2" type="Quantity"/>
        <field name="side" id="3" type="Side"/>
        <field name="flags" id="4" type="Flags"/>
        <field name="price" id="5" type="Price"/>
        <data name="note" id="6" type="varDataEncoding"/>
    </sbe:message>
</sbe:messageSchema>
